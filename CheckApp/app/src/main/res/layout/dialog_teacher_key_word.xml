<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/borda_dialog">


    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insira a palavra-passe fornecida pelo(a) professor(a)."
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:fontFamily="@font/noto_sans_bold"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/dialog_key_word_edt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint="Palavra-passe"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/dialog_key_word_bt_confirma"
        android:layout_marginTop="20dp"
        android:layout_width="180dp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:background="@drawable/borda_botao"
        android:backgroundTint="#2E8FB0"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="PRONTO" />
</LinearLayout>